            <StackLayout>
                               
               
                    <Grid 
                         x:Name="Grid"
                         VerticalOptions="Start"
                         RowSpacing="3"
                         HorizontalOptions="Start">
                        
                        <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                      
                        <Label Text="{Binding TxtOpt}" TextColor="Black" FontSize="Large" Grid.Row="0" Grid.Column="0" />

                        <Picker Title="{Binding TxtPicker}"
                            x:Name="PickerMode"
                            ItemsSource="{Binding Setlist}"
                            
                            ItemDisplayBinding="{Binding Type}"
                            SelectedItem="{Binding SelectedMode , Mode=TwoWay}"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Grid.Row="1"
                            Grid.Column="0"
                            
                        />
                        <Picker Title="{Binding TxtPickerColor}"
                                x:Name="PickerColor"
                                ItemsSource="{Binding ColorList}"
                                ItemDisplayBinding="{Binding TxtList}"
                                SelectedItem="{Binding SelectedColor, Mode=TwoWay}"
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalOptions="Start"
                                                    
                        />

                        <CollectionView ItemsSource="{Binding ColorSelected}" SelectionMode="Single" SelectedItem="{Binding Colordelete}" SelectionChangedCommand="{Binding RemoveColor}" ItemsLayout="VerticalList" Grid.Row="2" Grid.Column="1" Grid.RowSpan="5"  >
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <ScrollView VerticalScrollBarVisibility="Default" >
                                        <Grid Padding="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                            
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Text="{Binding TxtList}"
                                                 FontAttributes="Bold"
                                                 Grid.Column="0"                          
                                        />

                                            <Rectangle WidthRequest="20" HeightRequest="10" BackgroundColor="{Binding BGColor}"  Stroke="Black"  Grid.Column="1"/>


                                        </Grid>
                                    </ScrollView>
                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <StackLayout HorizontalOptions="FillAndExpand"
                                     VerticalOptions="FillAndExpand">
                                    <Label FontSize="19"
                                   Text="{Binding EmptyList}"></Label>
                                </StackLayout>
                            </CollectionView.EmptyView>

                        </CollectionView>


                        <Entry x:Name="Interval" Text="{Binding Interval, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="180"  Placeholder="{Binding Txtinterval}"  TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="2" />
                        <Entry x:Name="Rest" Text="{Binding Rest, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="100" Placeholder="{Binding Textrest}" BackgroundColor="Transparent" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="3"/>
                        <Entry x:Name="Delay" Text="{Binding Delay, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="80" Placeholder="{Binding Txtdelay}" BackgroundColor="Transparent" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="4"/>
                        <Entry x:Name="Rounds" Text="{Binding Rounds, Mode=TwoWay}" Keyboard="Numeric" Placeholder="{Binding Txtround}" BackgroundColor="Transparent"  TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="5"/>
                        <Entry x:Name="Number" Text="{Binding Number, Mode=TwoWay}" Keyboard="Numeric" Placeholder="{Binding Txtnumber}" BackgroundColor="Transparent" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Grid.Row="6" />
                        <Switch x:Name="Switch" Toggled="Switch_Toggled" HorizontalOptions="Start"  OnColor="#6ca931" Grid.Row="7" Grid.Column="0" ThumbColor="Gray" />
                        <Label Text="{Binding Txtsound}"  TranslationX="50" TranslationY="12" HorizontalOptions="Start" Grid.Row="7" Grid.Column="0"/>
                        <Label Text="{Binding Txttime}" FontSize="Medium" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="8" Grid.Column="0"/>
                        <Label Text="{Binding TimeWorkString}" TranslationX="120"  FontSize="Medium" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="8" Grid.Column="0"/>

                        <Button x:Name="BtnAdd" Text="{Binding BtnAddtxt}" Command="{Binding CmdAdd}" HorizontalOptions="StartAndExpand" VerticalOptions="Fill" BorderColor="Black" BorderWidth="1" BackgroundColor="#6ca931" CornerRadius="15" Grid.Row="8" Grid.Column="1"/>
                        <Button x:Name="BtnClear" Text="{Binding BtnSettxt}" Command="{Binding CmdClear}" HorizontalOptions="Start" VerticalOptions="Fill" BorderColor="Black" BorderWidth="1" BackgroundColor="#6ca931" CornerRadius="15" Grid.Row="9" Grid.Column="0" />
                        <Button Text="{Binding BtnStarttxt}" FontSize="Body" FontAttributes="Bold" Command="{Binding CmdStart}" BorderColor="Black" BorderWidth="1" BackgroundColor="#27AE60" HorizontalOptions="StartAndExpand" VerticalOptions="Center" CornerRadius="15" Grid.Row="9" Grid.Column="1" />

                        <controls:AdControlView Grid.Row="10" Grid.ColumnSpan="2"  AdUnitId="ca-app-pub-9333529972312529/9787674777" HorizontalOptions="StartAndExpand"/>



                     </Grid>
                 
                
            </StackLayout>
           
        </RelativeLayout>

    </ContentPage.Content>
</ContentPage>